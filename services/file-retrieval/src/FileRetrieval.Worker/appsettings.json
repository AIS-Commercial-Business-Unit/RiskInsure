{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "NServiceBus": "Information"
    }
  },
  
  "CosmosDb": {
    "EndpointUri": "https://REPLACE_WITH_COSMOS_ENDPOINT.documents.azure.com:443/",
    "DatabaseName": "file-retrieval",
    "Containers": {
      "Configurations": "file-retrieval-configurations",
      "Executions": "file-retrieval-executions",
      "DiscoveredFiles": "discovered-files"
    }
  },
  
  "AzureServiceBus": {
    "ConnectionString": "",
    "EndpointName": "FileRetrieval.Worker"
  },
  
  "AzureKeyVault": {
    "VaultUri": "https://REPLACE_WITH_KEYVAULT_NAME.vault.azure.net/"
  },
  
  "Scheduler": {
    "PollingIntervalSeconds": 60,
    "ExecutionWindowMinutes": 2,
    "MaxConcurrentChecks": 100,
    "EnableDistributedLocking": true
  },
  
  "ProtocolDefaults": {
    "Ftp": {
      "ConnectionTimeoutSeconds": 30,
      "DataConnectionTimeoutSeconds": 60,
      "RetryAttempts": 3,
      "RetryDelaySeconds": 5
    },
    "Https": {
      "TimeoutSeconds": 30,
      "RetryAttempts": 3,
      "RetryDelaySeconds": 5
    },
    "AzureBlob": {
      "TimeoutSeconds": 30,
      "RetryAttempts": 3,
      "RetryDelaySeconds": 5
    }
  }
}

