{
  "name": "RiskInsure Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "shutdownAction": "none",

  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0",
      "installUsingApt": false
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-playwright.playwright",
        "editorconfig.editorconfig",
        "ms-vscode.powershell"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "dotnet.server.useOmnisharp": false
      }
    }
  },

  "postCreateCommand": "bash -lc 'bash .devcontainer/post-create.sh 2>&1 | tee /tmp/post-create.log || true'",
  
  "forwardPorts": [
    7071, // Billing API
    7073, // Customer API
    7075, // FundsTransferMgt API
    7077, // Policy API
    7079, // Rating API
    8081, // Cosmos DB Emulator
    5672  // Service Bus Emulator
  ],

  "portsAttributes": {
    "7071": { "label": "Billing API", "onAutoForward": "notify" },
    "7073": { "label": "Customer API", "onAutoForward": "notify" },
    "7075": { "label": "FundsTransferMgt API", "onAutoForward": "notify" },
    "7077": { "label": "Policy API", "onAutoForward": "notify" },
    "7079": { "label": "Rating API", "onAutoForward": "notify" },
    "8081": { "label": "Cosmos DB Emulator", "onAutoForward": "silent" },
    "5672": { "label": "Service Bus Emulator", "onAutoForward": "silent" }
  },

  "remoteEnv": {
    "COSMOSDB_CONNECTION_STRING": "AccountEndpoint=https://cosmos.domain:8081/;AccountKey=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==",
    "SERVICEBUS_CONNECTION_STRING": "Endpoint=sb://servicebus-emulator;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=EMULATOR_KEY;UseDevelopmentEmulator=true"
  }
}
