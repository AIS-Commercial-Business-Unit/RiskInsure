# RiskInsure E2E Test Configuration
# Copy this file to .env for local development
# In CI/CD pipeline, set these as environment variables

# API Base URLs (defaults for local development)
# Use 127.0.0.1 instead of localhost to force IPv4 (Windows/Playwright compatibility)
CUSTOMER_API_URL=http://127.0.0.1:7073
RATING_API_URL=http://127.0.0.1:7079
POLICY_API_URL=http://127.0.0.1:7077
BILLING_API_URL=http://127.0.0.1:7071
FUNDS_TRANSFER_API_URL=http://127.0.0.1:7075

# File Retrieval E2E endpoints/auth
FILE_RETRIEVAL_API_BASE_URL=http://127.0.0.1:7090
FILE_RETRIEVAL_JWT_SECRET=REPLACE_WITH_SECRET_KEY_AT_LEAST_32_CHARS_LONG_FOR_PRODUCTION
FILE_RETRIEVAL_JWT_ISSUER=https://riskinsure.com
FILE_RETRIEVAL_JWT_AUDIENCE=file-retrieval-api
# Optional: provide pre-generated bearer token to bypass local token generation
FILE_RETRIEVAL_BEARER_TOKEN=

# File Retrieval FTP test settings
FILE_RETRIEVAL_FTP_CONTAINER=file-retrieval-ftp
FILE_RETRIEVAL_FTP_HOST=file-retrieval-ftp
FILE_RETRIEVAL_FTP_PORT=21
FILE_RETRIEVAL_FTP_USERNAME=testuser
FILE_RETRIEVAL_FTP_PASSWORD_SECRET_NAME=test-ftp-password

# Test Timeouts (milliseconds)
EVENTUAL_CONSISTENCY_TIMEOUT=10000
API_REQUEST_TIMEOUT=30000

# Test Data Prefixes (for easier identification in dev database)
TEST_CUSTOMER_PREFIX=E2E-TEST-CUST-
TEST_QUOTE_PREFIX=E2E-TEST-QUOTE-
